<Window x:Class="SharpPasswordManager.Views.DataValidateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpPasswordManager.Views"
        mc:Ignorable="d"
        Title="DataValidateView" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Login"/>
                <TextBox Text="{Binding Model.Login, Mode=TwoWay}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Description"/>
                <TextBox Text="{Binding Model.Description, Mode=TwoWay}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Password"/>
                <TextBox Text="{Binding Model.Password, Mode=TwoWay}" Width="200"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="Ok" Margin="5" Command="{Binding OkCmd}"/>
                <Button Content="Cancel" Margin="5" Command="{Binding CancelCmd}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
